# ============================
# Database configuration
# ============================

# PostgreSQL username
DB_USER=postgres

# PostgreSQL password
DB_PASSWORD=postgres

# Database host name or address
DB_HOST=localhost

# Database port number
DB_PORT=5432

# Database name
DB_NAME=allowances

# ============================
# Embedding configuration
# ============================

# Backend identifier for generating embeddings (e.g., hash, sentence-transformers)
EMBEDDING_BACKEND=hash

# Model name or path used by the embedding backend
EMBEDDING_MODEL=intfloat/multilingual-e5-small

# Dimensionality of generated embeddings; must match database vector column size
EMBEDDING_DIM=384

# Timeout (seconds) for loading embedding models
EMBEDDING_LOAD_TIMEOUT=300

# Set to true/false to control offline mode for embedding loading
EMBEDDING_OFFLINE=true

# Optional local path to the embedding model when using offline mode
EMBEDDING_LOCAL_MODEL=local-hash

# ============================
# Vector search configuration
# ============================

# Maximum number of search results returned by vector search operations
VECTOR_SEARCH_LIMIT=5
